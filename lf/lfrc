#Basic Settings
set hidden true

# Open file
cmd open ${{
    case $(file --mime-type "$(readlink -f $f)" -b) in
    # Audio
	audio/*|video/x-ms-asf) mpv --audio-display=no $f ;;

    # Text
    text/*|application/json|inode/x-empty|application/x-subrip) /usr/bin/nvim $fx;;

    # Video
	video/*) setsid -f mpv $f -quiet >/dev/null 2>&1 ;;
    esac
}}

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  /usr/bin/nvim $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

map m

# Basic Functions
map . set hidden!
map <enter> open
map R reload 
map mf mkfile
map md mkdir
map D delete
map E unarchive
map x cut
map y copy
map p paste

# Movement
map gg top
map gh cd ~
map gc cd ~/.config
map gp cd ~/Projects
map gn cd /mnt/chromeos/GoogleDrive/MyDrive/SchoolDocuments/Notes

